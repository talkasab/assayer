source 'http://rubygems.org'

gem 'rails', '~> 3.2'

gem 'sqlite3'

# Deploy with Capistrano
gem 'capistrano'

# Bundle gems for the runtime environment. 
gem "devise"
gem "haml-rails"
gem "jquery-rails"
gem "rails_config"
gem "rails3-generators"
gem "decent_exposure"
gem "libxml-ruby"
gem "xml-object"
gem 'grizzled-rails-logger'
gem 'rails-brochure'

group :assets do
  gem 'sprockets'
  gem "sass-rails"
  gem 'coffee-rails'
  gem 'bootstrap-sass'
  gem 'font-awesome-sass-rails'
  gem 'haml_coffee_assets'
  gem 'execjs'
  gem 'ejs'
  gem 'uglifier'
end

# Bundle gems for the development environment. 
group :test, :development do
  gem 'unicorn'
  # Testing, etc.
  gem 'rspec-rails'
  gem 'capybara'
  gem 'shoulda-matchers'
  gem 'factory_girl_rails'
  gem 'ruby_parser'
  # Continuous testing
  gem 'spork', '~> 1.0.0.rc'
  gem 'guard-rspec'
  gem 'guard-spork'
  gem 'guard-pow'
  gem 'ruby_gntp'
  # REPL
  gem 'pry'
  gem 'pry-doc'
  gem 'pry-rails'
  gem 'awesome_print'
  gem 'hirb'
  gem 'interactive_editor'
  gem 'hpricot'
end
